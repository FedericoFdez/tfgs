<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<!-- /myTFGs -->
	<servlet>
		<servlet-name>MyTFGsServlet</servlet-name>
		<servlet-class>es.upm.dit.isst.tfg.MyTFGsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MyTFGsServlet</servlet-name>
		<url-pattern>/myTFGs</url-pattern>
	</servlet-mapping>

	<!-- /newTFG -->
	<servlet>
		<servlet-name>NewTFGServlet</servlet-name>
		<servlet-class>es.upm.dit.isst.tfg.NewTFGServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NewTFGServlet</servlet-name>
		<url-pattern>/newTFG</url-pattern>
	</servlet-mapping>

	<!-- /accept -->
	<servlet>
		<servlet-name>AcceptTFGServlet</servlet-name>
		<servlet-class>es.upm.dit.isst.tfg.AcceptTFGServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AcceptTFGServlet</servlet-name>
		<url-pattern>/accept</url-pattern>
	</servlet-mapping>

	<!-- /acceptViaEmail -->
	<servlet>
		<servlet-name>AcceptTFGViaEmailServlet</servlet-name>
		<servlet-class>es.upm.dit.isst.tfg.AcceptTFGViaEmailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AcceptTFGViaEmailServlet</servlet-name>
		<url-pattern>/_ah/mail/tfg@isst‚Äêtfg.appspotmail.com</url-pattern>
	</servlet-mapping>

	<!-- /file -->
	<servlet>
		<servlet-name>FileServlet</servlet-name>
		<servlet-class>es.upm.dit.isst.tfg.FileServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FileServlet</servlet-name>
		<url-pattern>/file</url-pattern>
	</servlet-mapping>

	<!-- /index -->
	<servlet>
		<servlet-name>IndexServlet</servlet-name>
		<servlet-class>es.upm.dit.isst.tfg.IndexServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>IndexServlet</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index</welcome-file>
	</welcome-file-list>

	<!-- /clean -->
	<servlet>
		<servlet-name>CleanTFGsServlet</servlet-name>
		<servlet-class>es.upm.dit.isst.tfg.CleanTFGsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CleanTFGsServlet</servlet-name>
		<url-pattern>/clean</url-pattern>
	</servlet-mapping>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>cron</web-resource-name>
			<url-pattern>/clean</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	
	<!-- /TFGsAPI -->
	<servlet>
		<servlet-name>TFGsAPIServlet</servlet-name>
		<servlet-class>es.upm.dit.isst.tfg.TFGsAPIServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TFGsAPIServlet</servlet-name>
		<url-pattern>/TFGsAPI</url-pattern>
	</servlet-mapping>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>TFGsAPIServlet</web-resource-name>
			<url-pattern>/TFGsAPI</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	
</web-app>
